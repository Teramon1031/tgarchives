<div class="container">
  <div class="project">
    <%= form_tag("/admin/update/#{@project.team_id}") do %>
      <h1 class="name">
        <%= @project.app_name %>
        by
        <%= @project.team_name %>
      </h1>
      <div class="note-wrapper-edit">
        <div class="team-info-edit note">
          <p class="title"><span> 現在のチーム情報 </span></p>
          <ul>
            <li>チーム名 :  <%= @project.team_name %> </li>
            <li>アプリ名 :   <%= @project.app_name %></li>
            <li>参加年 : <%= "#{@project.year}年" %></li>
            <li>人数 :   <%= "#{@project.member_num}人" %> </li>
          </ul>
        </div>
        <div class="team-info-edit note">
          <p class="title"><span> 変更後のチーム情報 </span></p>
          <ul>
            <li>チーム名 : <input type="text" name="team_name" value=<%= @project.team_name %>></li>
            <li>アプリ名 : <input type="text" name="app_name" value=<%= @project.app_name %>></li>
            <li>参加年 : <input type="text" name="year" value=<%= @project.year %>></li>
            <li>人数 : <input type="text" name="member_num" value=<%= @project.member_num %>></li>
          </ul>
        </div>
      </div>
      <div class="video-wrapper">
        <div class="video">
          <div class="video-info">
            <p class="title"><span>Pitch Video</span></p>
            <ul>
              <li> URL : <a href="https://youtu.be/<%=@pitch_video_id %>">https://youtu.be/<%=@pitch_video_id %></a> </li>
              <li> 変更後のURL : <input type="text" name="pitch_video" value="https://youtu.be/<%=@pitch_video_id %>"></li>
            </ul>
          </div>
          <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @pitch_video_id %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div class="video">
          <div class="video-info">
            <p class="title"><span>Demo Video</span></p>
            <ul>
              <li> URL : <a href="https://youtu.be/<%=@pitch_video_id %>">
                  https://youtu.be/<%=@demo_video_id %></a> </li>
              <li> 変更後のURL : <input type="text" name="demo_video" value="https://youtu.be/<%=@demo_video_id %>"></li>
            </ul>
          </div>
          <iframe  width="560" height="315" src="https://www.youtube.com/embed/<%= @demo_video_id %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </div>
      <div class="btn-wrapper">
        <input class="form-btn" type="submit" value="変更完了">
      </div>
    <% end %>
  </div>
</div>
